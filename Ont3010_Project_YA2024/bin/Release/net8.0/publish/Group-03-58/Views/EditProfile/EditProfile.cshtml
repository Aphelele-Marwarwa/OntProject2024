@model Employee
@using Ont3010_Project_YA2024.Models.admin

@{
    ViewData["Title"] = "Edit Employee";
    Layout = "/Views/Shared/_mainLayout.cshtml";
}

<h1><i class="fas fa-user-edit"></i> Edit Employee</h1>
<hr />

@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Error"]
    </div>
}

<div class="container">
    <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>
        <input type="hidden" asp-for="EmployeeId" />

        <div class="form-section">
            <h4><i class="fas fa-user"></i> Profile Photo</h4>
            <div class="text-center mb-3">
                @if (Model.ProfilePhoto != null)
                {
                    <img src="data:image/png;base64,@Convert.ToBase64String(Model.ProfilePhoto)" class="img-thumbnail" style="max-width: 150px; max-height: 150px;" />
                }
                <div class="form-group mt-2">
                    <label asp-for="ProfilePhoto" class="control-label"><i class="fas fa-camera"></i> Upload New Photo</label>
                    <input asp-for="ProfilePhoto" class="form-control" type="file" />
                    <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-section">
            <h4><i class="fas fa-user-info"></i> Personal Information</h4>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"><i class="fas fa-user"></i> First Name</label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label"><i class="fas fa-user"></i> Last Name</label>
                <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"><i class="fas fa-envelope"></i> Email Address</label>
             
                    <input asp-for="Email" class="form-control" placeholder="Enter Email Address" />
             
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"><i class="fas fa-phone"></i> Phone Number</label>
                
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number" />
                
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-section">
            <h4><i class="fas fa-briefcase"></i> Employment Details</h4>

            <div class="form-group">
                <label asp-for="Title" class="control-label"><i class="fas fa-briefcase"></i> Title</label>
                <select asp-for="Title" class="form-control" onchange="toggleCustomInput('Title')">
                    <option value="">Select Title</option>
                    <option value="Mr.">Mr.</option>
                    <option value="Ms.">Ms.</option>
                    <option value="Mrs.">Mrs.</option>
                    <option value="Miss">Miss</option>
                    <option value="Dr.">Dr.</option>
                    <option value="Prof.">Prof.</option>
                    <option value="Rev.">Rev.</option>
                    <option value="Hon.">Hon.</option>
                    <option value="Sir">Sir</option>
                    <option value="Lady">Lady</option>
                    <option value="Other">Other</option>
                </select>
                <input id="TitleCustom" name="TitleCustom" class="form-control custom-input" placeholder="Enter custom title" style="display: none;" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Role" class="control-label"><i class="fas fa-user-tag"></i> Role</label>
                <select asp-for="Role" class="form-control" disabled>
                    <option value="">Select Role</option>
                    <option value="Administrator">Administrator</option>
                    <option value="Customer Liaison">Customer Liaison</option>
                    <option value="Inventory Liaison">Inventory Liaison</option>
                    <option value="Purchasing Manager">Purchasing Manager</option>
                    <option value="Maintenance Technician">Maintenance Technician</option>
                    <option value="Fault Technician">Fault Technician</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="DateOfHire" class="control-label"><i class="fas fa-calendar-day"></i> Date of Hire</label>
                <input asp-for="DateOfHire" class="form-control" type="date" readonly />
                <span asp-validation-for="DateOfHire" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Responsibility" class="control-label"><i class="fas fa-tasks"></i> Responsibility</label>
                <input asp-for="Responsibility" class="form-control" />
                <span asp-validation-for="Responsibility" class="text-danger"></span>
            </div>
        </div>

       @*  <div class="form-section">
            <h4><i class="fas fa-lock"></i> Security</h4>

            <div class="form-group">
                <label asp-for="Password" class="control-label"><i class="fas fa-lock"></i> Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div> *@

        <div class="form-group mt-3 text-center">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save Changes
            </button>
            @if (User.IsInRole("Administrator"))
            {
                <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Home
                </a>
            }
            else if (User.IsInRole("Customer Liaison"))
            {
                <a asp-controller="CustomerLiaison" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Home
                </a>
            }
            else if (User.IsInRole("Inventory Liaison"))
            {
                <a asp-controller="InventoryLiaison" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Home
                </a>
            }
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('select').on('change', function () {
                var selectId = $(this).attr('id');
                var $customInput = $('#' + selectId + 'Custom');

                if ($(this).val() === 'Other') {
                    $customInput.show().focus();
                } else {
                    $customInput.hide().val('');
                }
            });

            // Initialize custom inputs based on current selection
            $('select').each(function () {
                var selectId = $(this).attr('id');
                var $customInput = $('#' + selectId + 'Custom');

                if ($(this).val() === 'Other') {
                    $customInput.show();
                } else {
                    $customInput.hide();
                }
            });
        });
    </script>
    <script>
        // Function to hide TempData messages after 3 seconds
        $(document).ready(function () {
            setTimeout(function () {
                $("#createdMessage").fadeOut();
                $("#deletedMessage").fadeOut();
                $("#updatedMessage").fadeOut();
            }, 3000);
        });
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        .form-section {
            margin-bottom: 1.5rem;
            padding: 1rem;
            border: 1px solid #e9ecef;
            border-radius: .375rem;
            background-color: #f8f9fa;
        }

            .form-section h4 {
                margin-bottom: 1rem;
                font-size: 1.125rem;
                font-weight: 600;
                color: #343a40;
            }

        .form-group {
            margin-bottom: 1rem;
        }

            .form-group label {
                font-weight: bold;
                color: #495057;
            }

        .form-control {
            border-radius: .375rem;
            border-color: #ced4da;
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, .075);
        }

            .form-control:focus {
                border-color: #80bdff;
                box-shadow: 0 0 0 .2rem rgba(38, 143, 255, .25);
            }

        .text-danger {
            color: #dc3545;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .btn-secondary {
            min-width: 150px;
            border-radius: .375rem;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }

        .img-thumbnail {
            border-radius: .375rem;
        }

        .custom-input {
            margin-top: 0.5rem;
        }

    </style>
}