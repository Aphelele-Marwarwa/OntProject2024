@model Ont3010_Project_YA2024.Models.admin.Setting

@{
    ViewData["Title"] = "Edit Settings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1><i class="fas fa-cogs"></i> Settings</h1>
<hr />
<div class="row settings-form">
    <div class="col-md-8 offset-md-2">
        @if (TempData["updated"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <span>@TempData["updated"]</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                
            </div>
        }
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <span>@TempData["error"]</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
               
            </div>
        }

        <form asp-action="Edit" method="post" enctype="multipart/form-data" class="p-4 bg-light border rounded shadow-sm">
            <input type="hidden" asp-for="SettingId" />

            <div class="form-group mb-3">
                <label asp-for="BusinessName" class="form-label"><i class="fas fa-building"></i> Business Name</label>
                <input asp-for="BusinessName" class="form-control" placeholder="Enter Business Name" />
                <span asp-validation-for="BusinessName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ContactEmail" class="form-label"><i class="fas fa-envelope"></i> Contact Email</label>
                <input asp-for="ContactEmail" class="form-control" placeholder="Enter Contact Email" />
                <span asp-validation-for="ContactEmail" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ContactPhone" class="form-label"><i class="fas fa-phone"></i> Contact Phone</label>
                <input asp-for="ContactPhone" class="form-control" placeholder="Enter Contact Phone" />
                <span asp-validation-for="ContactPhone" class="text-danger"></span>
            </div>

            <!-- For Business Logo -->
            <div class="form-group mb-3">
                <label asp-for="BusinessLogo" class="form-label">Business Logo</label>
                @if (Model.BusinessLogo != null && Model.BusinessLogo.Length > 0)
                {
                    var base64Logo = Convert.ToBase64String(Model.BusinessLogo);
                    <div>
                        <img src="data:image/png;base64,@base64Logo" alt="Business Logo" style="max-width: 100px; height: auto;" />
                    </div>
                    <div>
                        <span>Current Business Logo</span>
                    </div>
                    <input type="hidden" name="ExistingBusinessLogo" value="@base64Logo" />
                }
                <input type="file" name="BusinessLogo" class="form-control" />
              @*   <span asp-validation-for="BusinessLogo" class="text-danger"></span> *@
            </div>

            <!-- For Cover Photo -->
            <div class="form-group mb-3">
                <label asp-for="CoverPhoto" class="form-label">Cover Photo</label>
                @if (Model.CoverPhoto != null && Model.CoverPhoto.Length > 0)
                {
                    var base64Cover = Convert.ToBase64String(Model.CoverPhoto);
                    <div>
                        <img src="data:image/png;base64,@base64Cover" alt="Cover Photo" style="max-width: 100px; height: auto;" />
                    </div>
                    <div>
                        <span>Current Cover Photo</span>
                    </div>
                    <input type="hidden" name="ExistingCoverPhoto" value="@base64Cover" />
                }
                <input type="file" name="CoverPhoto" class="form-control" />
               @*  <span asp-validation-for="CoverPhoto" class="text-danger"></span> *@
            </div>

            <div class="form-group mb-3 text-center">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                <a href="@Url.Action("Index", "Admin")" class="btn btn-danger ms-2"><i class="fas fa-times"></i> Cancel</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(event, previewId) {
            var input = event.target;
            var reader = new FileReader();
            reader.onload = function () {
                var dataURL = reader.result;
                var output = document.getElementById(previewId);
                output.src = dataURL;
                output.style.display = 'block';
            };
            reader.readAsDataURL(input.files[0]);
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        // Function to hide TempData messages after 3 seconds
        $(document).ready(function () {
            setTimeout(function () {
                $("#createdMessage").fadeOut();
                $("#deletedMessage").fadeOut();
                $("#updatedMessage").fadeOut();
            }, 3000);
        });
    </script>
    <style>
        .settings-form .form-label {
            font-weight: bold;
        }

        .settings-form .form-group.text-center {
            text-align: center;
        }

        .settings-form .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .settings-form .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .settings-form .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .settings-form .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .settings-form .btn {
            margin: 0.5rem;
        }

        .settings-form .alert-dismissible .btn-close {
            position: absolute;
            top: 0.5rem;
            right: 0.5rem;
            z-index: 1;
        }

        .settings-form .form-control {
            border-radius: 0.25rem;
            border: 1px solid #ced4da;
        }

            .settings-form .form-control:focus {
                border-color: #80bdff;
                box-shadow: 0 0 0 0.2rem rgba(38,143,255,.25);
            }

        .settings-form .alert-dismissible .btn-close {
            padding: 0.5rem 0.75rem;
            margin: -0.5rem -0.75rem -0.5rem auto;
        }
    </style>
}
