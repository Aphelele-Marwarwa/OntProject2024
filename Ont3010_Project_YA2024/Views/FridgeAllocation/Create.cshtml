@model Ont3010_Project_YA2024.Models.CustomerLiaison.FridgeAllocation

@{
    ViewData["Title"] = "Create Fridge Allocation";
    Layout = ViewData["Layout"] as string;  // Ensure the layout path is correct
}

<div class="Fridge-details-container">
    <h1 class="text-center">
        <i class="fas fa-plus-circle"></i> Create Fridge Allocation
    </h1>
    <hr />

    <div class="container mt-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" name="CustomerId" value="@ViewBag.CustomerId" />

            <!-- Display the customer full name -->
            <div class="form-group d-flex align-items-center">
                <label class="control-label" style="width:25%;">Customer</label>
                <input type="text" class="form-control" value="@ViewBag.CustomerFullName" readonly />
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>


            <div class="form-group d-flex align-items-center">
                <label asp-for="FridgeId" class="control-label" style="width: 20%;">Fridge</label>
                <select asp-for="FridgeId" class="form-control" style="width: 80%;" id="fridgeDropdown">
                    <option value="">Select a Fridge</option>
                    @foreach (var fridge in ViewBag.Fridges)
                    {
                        <option value="@fridge.FridgeId" data-serial-number="@fridge.SerialNumber" data-id="@fridge.FridgeId">
                            @fridge.FridgeName (Serial: @fridge.SerialNumber)
                        </option>
                    }
                </select>
                <span asp-validation-for="FridgeId" class="text-danger"></span>
            </div>

            <!-- Button to view details -->
            <div>
                <button type="button" class="btn btn-info btn-view-details" id="btnViewDetails" data-id="" data-serial-number="">Preview Fridge Details</button>
            </div>




            <!-- Duration field -->
            <div class="form-group d-flex align-items-center">
                <label asp-for="Duration" class="control-label" style="width: 20%;">Duration (Months)</label>
                <input asp-for="Duration" class="form-control" style="width: 80%;" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <!-- Special Instructions field -->
            <div class="form-group d-flex align-items-center">
                <label asp-for="SpecialInstructions" class="control-label" style="width: 20%;">Special Instructions</label>
                <textarea asp-for="SpecialInstructions" class="form-control" style="width: 80%;"></textarea>
                <span asp-validation-for="SpecialInstructions" class="text-danger"></span>
            </div>

            <!-- Submit buttons -->
            <div class="form-group d-flex" style="margin-top: 10px;">
                <input type="submit" value="Create" class="btn btn-primary me-2" />
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-controller="Customer" asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left"></i> Back to Customers
                    </a>
                }
                else
                {
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                }
            </div>
        </form>
    </div>
    <div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailsModalLabel">Fridge Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="location.reload();"></button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="location.reload();">Close</button>
                </div>
            </div>
        </div>
    </div>


</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <!-- jQuery (already included) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Include Select2 CSS and JS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- Custom Styles -->
    <style>
        .Fridge-details-container {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            border-radius: .375rem;
            padding: 10px;
            margin: 10px 0;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .text-center {
            text-align: center;
        }

        /* Ensure all form controls have the same height and width */
        .form-control, .select2-container--default .select2-selection--single {
            height: 38px;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
        }

            .select2-container--default .select2-selection--single .select2-selection__rendered {
                padding-left: 0.75rem;
                line-height: 1.5; /* Align text vertically */
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004db3;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }

        .fa-plus-circle {
            color: #28a745;
        }

        .fa-arrow-left {
            color: #ffffff;
        }

        .form-group {
            margin-bottom: 1rem;
        }

    </style>
    <script>


        // Get references to the dropdown and button
        const fridgeDropdown = document.getElementById('fridgeDropdown');
        const btnViewDetails = document.getElementById('btnViewDetails');

        // Add an event listener for the change event on the dropdown
        fridgeDropdown.addEventListener('change', function () {
            // Get the selected option
            const selectedOption = fridgeDropdown.options[fridgeDropdown.selectedIndex];

            // Update button data attributes based on the selected option
            btnViewDetails.setAttribute('data-id', selectedOption.value);
            btnViewDetails.setAttribute('data-serial-number', selectedOption.getAttribute('data-serial-number'));

            // Enable or disable the button based on selection
            btnViewDetails.disabled = !selectedOption.value;
        });

        // Fetch fridge details on button click
        $(document).on('click', '#btnViewDetails', function () {


            var fridgeId = $(this).data('id');
            var serialNumber = $(this).data('serial-number');

            if (fridgeId) {
                $.get('@Url.Action("GetFridgeDetails", "Home")', { id: fridgeId, serialNumber: serialNumber })
                    .done(function (data) {
                        $('#detailsModal .modal-body').html(data);
                        $('#detailsModal').modal('show');
                    })
                    .fail(function () {
                        $('#detailsModal .modal-body').html('<p>Error loading details.</p>');
                        $('#detailsModal').modal('show');
                    });
            }
        });
    </script>



    <!-- Script for fading out TempData messages -->
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $("#createdMessage").fadeOut();
                $("#deletedMessage").fadeOut();
                $("#updatedMessage").fadeOut();
            }, 3000);
        });
    </script>

    <!-- Initialize Select2 -->
    <script>
        $(document).ready(function () {
            $('.customer-dropdown').select2({
                placeholder: "Search for a customer",
                allowClear: true,
                width: 'resolve'
            });
        });
    </script>
}
