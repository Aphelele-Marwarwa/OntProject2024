@model Ont3010_Project_YA2024.Models.InventoryLiaison.PurchaseRequest

@{
    ViewData["Title"] = "Purchase Request Details";
    Layout = "~/Views/Shared/_InventoryLiaisonLayout.cshtml";
}

<h2 class="text-center">
    <i class="fas fa-box"></i> Purchase Request Details
</h2>

<div class="containers mt-5">
    <div class="card shadow-lg p-4 mb-5 bg-white rounded">
        <h4 class="card-title">Purchase Request</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                <i class="fas fa-cube"></i> Fridge Model/Type
            </dt>
            <dd class="col-sm-8">@Model.FridgeModelType</dd>

            <dt class="col-sm-4">
                <i class="fas fa-tachometer-alt"></i> Capacity
            </dt>
            <dd class="col-sm-8">@Model.Capacity</dd>

            <dt class="col-sm-4">
                <i class="fas fa-sort-numeric-up"></i> Quantity
            </dt>
            <dd class="col-sm-8">@Model.Quantity</dd>

            <dt class="col-sm-4">
                <i class="fas fa-exclamation-triangle"></i> Urgency
            </dt>
            <dd class="col-sm-8">@Model.Urgency</dd>

            <dt class="col-sm-4">
                <i class="fas fa-sticky-note"></i> Justification
            </dt>
            <dd class="col-sm-8">@Model.Justification</dd>
        </dl>
    </div>
</div>

<div class="text-center mt-4">
    <a class="btn btn-primary btn-lg custom-back-btn" asp-action="Index">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Function to hide TempData messages after 3 seconds
        $(document).ready(function () {
            setTimeout(function () {
                $("#createdMessage").fadeOut();
                $("#deletedMessage").fadeOut();
                $("#updatedMessage").fadeOut();
            }, 3000);
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        /* Custom UX-focused CSS */
        .containers {
            max-width: 900px;
            margin: auto;
            padding: 20px;
        }

        h2 {
            font-family: 'Poppins', sans-serif;
            font-weight: bold;
            color: #343a40;
            margin-bottom: 30px;
        }

        .card {
            background-color: #f8f9fa;
            border: none;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: 500;
            color: #495057;
        }

        dt {
            font-weight: bold;
            color: #495057;
        }

        dd {
            color: #6c757d;
            margin-bottom: 20px;
        }

        .custom-back-btn {
            background-color: #007bff;
            border-color: #007bff;
            padding: 10px 20px;
            font-size: 1.1rem;
            border-radius: 20px;
            transition: all 0.3s ease;
        }

            .custom-back-btn:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

                /* Button hover effect */
                .custom-back-btn:hover i {
                    margin-left: -5px;
                }


        /* Card shadow for better visual structure */
        .card {
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        /* Spacing between icons and text */
        dt i {
            margin-right: 10px;
        }

        /* Styling the content inside dl */
        dl {
            font-family: 'Roboto', sans-serif;
            font-size: 1rem;
        }

        /* Make text responsive */
      
    </style>
}
