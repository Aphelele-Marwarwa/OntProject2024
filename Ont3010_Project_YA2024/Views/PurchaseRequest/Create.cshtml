@model Ont3010_Project_YA2024.Models.InventoryLiaison.PurchaseRequest

@{
    ViewData["Title"] = "Create Purchase Request";
    Layout = "~/Views/Shared/_InventoryLiaisonLayout.cshtml";
}

<h1 class="text-center">
    <i class="fas fa-box-open"></i> Create Purchase Request
</h1>

<h4 class="text-center">Purchase Request</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="FridgeId" class="control-label">
                        <i class="fas fa-fridge"></i> Fridge ID
                    </label>
                    <select asp-for="FridgeId" asp-items="ViewBag.FridgeId" class="form-control">
                        <option value="">Select a Fridge</option>
                    </select>
                    <span asp-validation-for="FridgeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FridgeModelType" class="control-label">
                        <i class="fas fa-snowflake"></i> Fridge Model Type
                    </label>
                    <input asp-for="FridgeModelType" class="form-control" />
                    <span asp-validation-for="FridgeModelType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Capacity" class="control-label">
                        <i class="fas fa-cube"></i> Capacity
                    </label>
                    <input asp-for="Capacity" class="form-control" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label">
                        <i class="fas fa-sort-numeric-up"></i> Quantity
                    </label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Urgency" class="control-label">
                        <i class="fas fa-exclamation"></i> Urgency
                    </label>
                    <input asp-for="Urgency" class="form-control" />
                    <span asp-validation-for="Urgency" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Justification" class="control-label">
                        <i class="fas fa-sticky-note"></i> Justification
                    </label>
                    <textarea asp-for="Justification" class="form-control" rows="3" placeholder="Enter justification"></textarea>
                    <span asp-validation-for="Justification" class="text-danger"></span>
                </div>

                <!-- Adding a div for spacing -->
                <div class="mb-4"></div> <!-- Adds margin-bottom to create space -->

                <div class="form-group text-center mt-4">
                    <!-- Buttons with custom styling -->
                    <button type="submit" class="btn btn-primary custom-btn-primary">
                        <i class="fas fa-save"></i> Create
                    </button>
                    <a asp-action="Index" class="btn btn-secondary custom-btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Function to hide TempData messages after 3 seconds
        $(document).ready(function () {
            setTimeout(function () {
                $("#createdMessage").fadeOut();
                $("#deletedMessage").fadeOut();
                $("#updatedMessage").fadeOut();
            }, 3000);
        });
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .form-group label {
            display: flex;
            align-items: center;
        }

            .form-group label i {
                margin-right: 0.5rem;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .custom-btn-primary {
            font-size: 0.875rem; /* Smaller font size */
            padding: 0.5rem 1rem; /* Adjusted padding */
        }

        .custom-btn-secondary {
            font-size: 0.875rem; /* Smaller font size */
            padding: 0.5rem 1rem; /* Adjusted padding */
        }

        .text-center {
            text-align: center;
        }

        .text-danger {
            font-size: 0.875em;
        }

        /* Custom margin for spacing */
        .mb-4 {
            margin-bottom: 1.5rem; /* Adjust as needed */
        }
    </style>
}
