@model Ont3010_Project_YA2024.Models.InventoryLiaison.ScrappedFridge

@{
    ViewData["Title"] = "Create Scrapped Fridge";
    Layout = ViewData["Layout"] as string;
}

<h1 class="text-center">
    <i class="fas fa-trash-alt"></i> Create Scrapped Fridge
</h1>

<h4 class="text-center">Scrapped Fridge</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form asp-action="Create" method="post">
                <input type="hidden" name="serialNumber" value="@Model.FridgeSerialNumber" />
                <input type="hidden" asp-for="FridgeId" />
                <input type="hidden" asp-for="FridgeSerialNumber" />

                <div class="form-group">
                    <label asp-for="FridgeId" class="control-label">
                        <i class="fas fa-fridge"></i> Fridge ID
                    </label>
                    <input asp-for="FridgeId" class="form-control" readonly />
                    <span asp-validation-for="FridgeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ScrapReason" class="control-label">
                        <i class="fas fa-exclamation-triangle"></i> Scrap Reason
                    </label>
                    <textarea asp-for="ScrapReason" class="form-control" rows="4" placeholder="Enter reason for scrapping the fridge"></textarea>
                    <span asp-validation-for="ScrapReason" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Notes" class="control-label">
                        <i class="fas fa-sticky-note"></i> Notes
                    </label>
                    <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Add any additional notes"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <!-- Adding a div for spacing -->
                <div class="mb-4"></div> <!-- Adds margin-bottom to create space -->

                <div class="form-group text-center mt-4">
                    <!-- Buttons with custom styling -->
                    <button type="submit" class="btn btn-primary custom-btn-primary">
                        <i class="fas fa-save"></i> Create
                    </button>
                    <a asp-action="Index" class="btn btn-secondary custom-btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Function to hide TempData messages after 3 seconds
        $(document).ready(function () {
            setTimeout(function () {
                $("#createdMessage").fadeOut();
                $("#deletedMessage").fadeOut();
                $("#updatedMessage").fadeOut();
            }, 3000);
        });
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .form-group label {
            display: flex;
            align-items: center;
        }

            .form-group label i {
                margin-right: 0.5rem;
            }

        .btn-group {
            display: flex;
            justify-content: center;
            gap: 1rem; /* Space between buttons */
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .custom-btn-primary {
            font-size: 0.875rem; /* Smaller font size */
            padding: 0.5rem 1rem; /* Adjusted padding */
        }

        .custom-btn-secondary {
            font-size: 0.875rem; /* Smaller font size */
            padding: 0.5rem 1rem; /* Adjusted padding */
        }

        .text-center {
            text-align: center;
        }

        .text-danger {
            font-size: 0.875em;
        }

        /* Custom margin for spacing */
        .mb-4 {
            margin-bottom: 1.5rem; /* Adjust as needed */
        }
    </style>
}
