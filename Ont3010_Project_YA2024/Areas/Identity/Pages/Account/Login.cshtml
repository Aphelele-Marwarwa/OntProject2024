@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<style>
    .login-container {
        max-width: 400px;
        margin: auto;
        padding: 1.5rem;
        border: 1px solid #ddd;
        border-radius: 12px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: rgba(0, 128, 128, 0.3); /* Dark teal with 80% opacity */
        backdrop-filter: blur(10px); /* Apply blur effect */
        -webkit-backdrop-filter: blur(10px); /* Safari support */
      
    }

    .login-header {
        text-align: center;
        margin-bottom: 1rem;
    }

        .login-header h1 {
            font-size: 1.75rem;
            color: #333;
        }

        .login-header h2 {
            font-size: 1.25rem;
            color: white;
            font-weight: bold;
        }

    .form-floating {
        position: relative;
    }

        .form-floating input {
            border-radius: 8px;
        }

        .form-floating label {
            padding-left: 0.5rem;
          
        }

        .form-floating .text-danger {
            margin-top: 0.5rem;
        }

    .form-check-input {
        margin-right: 0.5rem;
    }

    .login-buttons {
        text-align: center;
        margin-top: 1rem;
    }

        .login-buttons button {
            padding: 0.75rem 1.25rem;
            font-size: 1rem;
            border-radius: 8px;
        }

    .login-links {
        text-align: center;
        margin-top: 1rem;
    }

    .forgot-password-text {
        color: white; /* White color for "Forgot your password?" text */
    }

    #forgot-password {
        color: darkblue; /* Blue color for "Reset Password" link */
        text-decoration: underline; /* Underline */
    }

        #forgot-password:hover {
            text-decoration: underline; /* Ensure underline on hover */
        }


        .login-links a {
            display: block;
        color: darkblue;
            text-decoration: none;
            margin-top: 0.5rem;
        }

            .login-links a:hover {
                text-decoration: underline;
            }
</style>

<div class="login-container">
    <section>
        <form id="account" method="post">
            <div class="login-header">
                <h2>Login</h2>
                <hr />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
           @*  <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div> *@
            <div class="login-buttons">
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
            </div>
            <div class="login-links">
                <p>
                    <span class="forgot-password-text">Forgot your password?</span>

                    <a id="forgot-password" asp-page="./ForgotPassword">Reset Password</a>
                </p>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
